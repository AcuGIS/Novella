{% extends "layout/base.twig" %}

{% block title %}Documents{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Documents</h1>
        <a href="{{ url_for('documents.create') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Upload New Document
        </a>
    </div>

    {% if flash.success %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{ flash.success }}</span>
        </div>
    {% endif %}

    {% if flash.error %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{ flash.error }}</span>
        </div>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for document in documents %}
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex justify-between items-start mb-4">
                    <h2 class="text-xl font-semibold">{{ document.title }}</h2>
                    <div class="flex space-x-2">
                        <button 
                            class="toggle-public-btn px-3 py-1 rounded text-sm {% if document.is_public %}bg-green-500 text-white{% else %}bg-gray-300 text-gray-700{% endif %}"
                            data-document-id="{{ document.id }}"
                            data-is-public="{{ document.is_public ? '1' : '0' }}">
                            {{ document.is_public ? 'Public' : 'Private' }}
                        </button>
                    </div>
                </div>
                
                <p class="text-gray-600 mb-4">{{ document.description }}</p>
                
                <div class="text-sm text-gray-500 mb-4">
                    <p>Type: {{ document.file_type }}</p>
                    <p>Size: {{ (document.file_size / 1024)|round(2) }} KB</p>
                    <p>Uploaded: {{ document.created_at|date('M d, Y') }}</p>
                </div>

                <div class="flex justify-end space-x-2">
                    <a href="{{ url_for('documents.edit', {'id': document.id}) }}" 
                       class="text-blue-500 hover:text-blue-700">
                        Edit
                    </a>
                    <form action="{{ url_for('documents.delete', {'id': document.id}) }}" 
                          method="POST" 
                          class="inline"
                          onsubmit="return confirm('Are you sure you want to delete this document?');">
                        <button type="submit" class="text-red-500 hover:text-red-700">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        {% else %}
            <div class="col-span-full text-center py-8">
                <p class="text-gray-500">No documents uploaded yet.</p>
            </div>
        {% endfor %}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const toggleButtons = document.querySelectorAll('.toggle-public-btn');
    
    toggleButtons.forEach(button => {
        button.addEventListener('click', async function() {
            const documentId = this.dataset.documentId;
            const isPublic = this.dataset.isPublic === '1';
            
            try {
                const response = await fetch(`/documents/${documentId}/toggle-public`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    this.dataset.isPublic = data.is_public ? '1' : '0';
                    this.textContent = data.is_public ? 'Public' : 'Private';
                    this.classList.toggle('bg-green-500');
                    this.classList.toggle('bg-gray-300');
                    this.classList.toggle('text-white');
                    this.classList.toggle('text-gray-700');
                }
            } catch (error) {
                console.error('Error toggling document visibility:', error);
            }
        });
    });
});
</script>
{% endblock %} 