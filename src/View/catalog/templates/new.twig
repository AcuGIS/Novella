{% extends "layout.twig" %}

{% block title %}Create Metadata Template - GIS Catalog{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <a href="/catalog/templates" class="text-blue-600 hover:text-blue-900">&larr; Back to Templates</a>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <div class="flex justify-between items-center mb-4">
                <div>
                    <h3 class="text-lg leading-6 font-medium text-gray-900">Create New Metadata Template</h3>
                    <div class="mt-2 max-w-xl text-sm text-gray-500">
                        <p>Create a new metadata template that can be used to generate metadata records.</p>
                    </div>
                </div>
                <button type="button" onclick="createDefaultISO19115Template()" 
                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                    Create Default ISO 19115 Template
                </button>
            </div>

            <form action="/catalog/templates/new" method="POST" class="mt-5 space-y-6" id="templateForm">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Template Name</label>
                    <div class="mt-1">
                        <input type="text" name="name" id="name" required
                            class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">
                    </div>
                </div>

                <div>
                    <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                    <div class="mt-1">
                        <textarea name="description" id="description" rows="3"
                            class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md"></textarea>
                    </div>
                </div>

                <div>
                    <label for="metadata_standard" class="block text-sm font-medium text-gray-700">Metadata Standard</label>
                    <div class="mt-1">
                        <select name="metadata_standard" id="metadata_standard" required
                            class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">
                            <option value="ISO 19115">ISO 19115</option>
                            <option value="ISO 19139">ISO 19139</option>
                            <option value="INSPIRE">INSPIRE</option>
                            <option value="FGDC">FGDC</option>
                            <option value="OGC CSW">OGC CSW</option>
                            <option value="Dublin Core">Dublin Core</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label for="metadata_version" class="block text-sm font-medium text-gray-700">Version</label>
                    <div class="mt-1">
                        <input type="text" name="metadata_version" id="metadata_version" required
                            class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">
                    </div>
                </div>

                <div>
                    <label for="template_xml" class="block text-sm font-medium text-gray-700">Template XML</label>
                    <div class="mt-1">
                        <textarea name="template_xml" id="template_xml" rows="10" required
                            class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md font-mono"></textarea>
                    </div>
                    <p class="mt-2 text-sm text-gray-500">Enter the XML template with placeholders using {{variable}} syntax.</p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Template Fields</label>
                    <div id="template-fields" class="mt-2 space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-start">
                            <div class="flex-1">
                                <input type="text" name="fields[0][name]" placeholder="Field Name" required
                                    class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">
                            </div>
                            <div class="flex-1">
                                <input type="text" name="fields[0][path]" placeholder="Field Path" required
                                    class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">
                            </div>
                            <div class="w-32">
                                <select name="fields[0][type]" required
                                    class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">
                                    <option value="string">String</option>
                                    <option value="text">Text</option>
                                    <option value="date">Date</option>
                                    <option value="decimal">Decimal</option>
                                    <option value="array">Array</option>
                                </select>
                            </div>
                            <div class="w-24">
                                <label class="inline-flex items-center">
                                    <input type="checkbox" name="fields[0][required]" class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                                    <span class="ml-2 text-sm text-gray-600">Required</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <button type="button" onclick="addField()" class="mt-2 inline-flex items-center px-3 py-1 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Add Field
                    </button>
                </div>

                <div class="flex items-center">
                    <input type="checkbox" name="is_default" id="is_default" value="1"
                        class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                    <label for="is_default" class="ml-2 block text-sm text-gray-900">
                        Set as default template
                    </label>
                </div>

                <div class="pt-5">
                    <div class="flex justify-end">
                        <a href="/catalog/templates" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Cancel
                        </a>
                        <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Create Template
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{% block scripts %}
<script>
let fieldCount = 1;

function addField() {
    const container = document.getElementById('template-fields');
    const newField = document.createElement('div');
    newField.className = 'grid grid-cols-1 md:grid-cols-4 gap-4 items-start mt-4';
    newField.innerHTML = `
        <div class="flex-1">
            <input type="text" name="fields[${fieldCount}][name]" placeholder="Field Name" required
                class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">
        </div>
        <div class="flex-1">
            <input type="text" name="fields[${fieldCount}][path]" placeholder="Field Path" required
                class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">
        </div>
        <div class="w-32">
            <select name="fields[${fieldCount}][type]" required
                class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">
                <option value="string">String</option>
                <option value="text">Text</option>
                <option value="date">Date</option>
                <option value="decimal">Decimal</option>
                <option value="array">Array</option>
            </select>
        </div>
        <div class="w-24">
            <label class="inline-flex items-center">
                <input type="checkbox" name="fields[${fieldCount}][required]" class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                <span class="ml-2 text-sm text-gray-600">Required</span>
            </label>
        </div>
        <div class="col-span-4 flex justify-end">
            <button type="button" onclick="this.parentElement.parentElement.remove()" class="text-sm text-red-600 hover:text-red-900">
                Remove Field
            </button>
        </div>
    `;
    container.appendChild(newField);
    fieldCount++;
}

// Function to create default ISO 19115 template
function createDefaultISO19115Template() {
    const defaultTemplate = {
        name: 'Default ISO 19115 Template',
        description: 'Default template based on ISO 19115 standard with all standard fields',
        metadata_standard: 'ISO 19115',
        metadata_version: '2018',
        is_default: true,
        fields: [
            // Basic Information
            { name: 'title', label: 'Title', type: 'text', required: true, path: '//gmd:identificationInfo/gmd:MD_DataIdentification/gmd:citation/gmd:CI_Citation/gmd:title/gco:CharacterString' },
            { name: 'description', label: 'Description', type: 'textarea', path: '//gmd:identificationInfo/gmd:MD_DataIdentification/gmd:abstract/gco:CharacterString' },
            { name: 'abstract', label: 'Abstract', type: 'textarea', required: true, path: '//gmd:identificationInfo/gmd:MD_DataIdentification/gmd:abstract/gco:CharacterString' },
            { name: 'purpose', label: 'Purpose', type: 'textarea', required: true, path: '//gmd:identificationInfo/gmd:MD_DataIdentification/gmd:purpose/gco:CharacterString' },
            { name: 'keywords', label: 'Keywords', type: 'textarea', path: '//gmd:identificationInfo/gmd:MD_DataIdentification/gmd:descriptiveKeywords/gmd:MD_Keywords/gmd:keyword/gco:CharacterString' },
            { name: 'topicCategory', label: 'Topic Category', type: 'select', path: '//gmd:identificationInfo/gmd:MD_DataIdentification/gmd:topicCategory/gmd:MD_TopicCategoryCode',
              options: ['farming', 'biota', 'boundaries', 'climatologyMeteorologyAtmosphere', 'economy', 'elevation', 'environment', 'geoscientificInformation', 'health', 'imageryBaseMapsEarthCover', 'intelligenceMilitary', 'inlandWaters', 'location', 'oceans', 'planningCadastre', 'society', 'structure', 'transportation', 'utilitiesCommunication'] },
            
            // Spatial Information
            { name: 'spatial_extent', label: 'Spatial Extent', type: 'map', required: true, path: '//gmd:identificationInfo/gmd:MD_DataIdentification/gmd:extent/gmd:EX_Extent/gmd:geographicElement/gmd:EX_GeographicBoundingBox' },
            { name: 'crs', label: 'Coordinate Reference System', type: 'text', value: 'EPSG:4326', path: '//gmd:referenceSystemInfo/gmd:MD_ReferenceSystem/gmd:referenceSystemIdentifier/gmd:RS_Identifier/gmd:code/gco:CharacterString' },
            
            // Temporal Information
            { name: 'temporalExtent', label: 'Temporal Extent', type: 'text', required: true, path: '//gmd:identificationInfo/gmd:MD_DataIdentification/gmd:extent/gmd:EX_Extent/gmd:temporalElement/gmd:EX_TemporalExtent' },
            
            // Responsible Parties
            { name: 'pointOfContact', label: 'Point of Contact', type: 'text', required: true, path: '//gmd:identificationInfo/gmd:MD_DataIdentification/gmd:pointOfContact/gmd:CI_ResponsibleParty/gmd:individualName/gco:CharacterString' },
            { name: 'publisher', label: 'Publisher', type: 'text', path: '//gmd:identificationInfo/gmd:MD_DataIdentification/gmd:pointOfContact/gmd:CI_ResponsibleParty/gmd:organisationName/gco:CharacterString' },
            
            // Data Quality
            { name: 'lineage', label: 'Lineage', type: 'textarea', path: '//gmd:dataQualityInfo/gmd:DQ_DataQuality/gmd:lineage/gmd:LI_Lineage/gmd:statement/gco:CharacterString' },
            { name: 'scope', label: 'Scope', type: 'select', path: '//gmd:dataQualityInfo/gmd:DQ_DataQuality/gmd:scope/gmd:DQ_Scope/gmd:level/gmd:MD_ScopeCode',
              options: ['dataset', 'series', 'featureType', 'feature', 'attributeType', 'attribute', 'tile', 'model', 'other'] },
            
            // Distribution
            { name: 'distributionFormat', label: 'Distribution Format', type: 'text', path: '//gmd:distributionInfo/gmd:MD_Distribution/gmd:distributionFormat/gmd:MD_Format/gmd:name/gco:CharacterString' },
            { name: 'distributionUrl', label: 'Distribution URL', type: 'url', path: '//gmd:distributionInfo/gmd:MD_Distribution/gmd:transferOptions/gmd:MD_DigitalTransferOptions/gmd:onLine/gmd:CI_OnlineResource/gmd:linkage/gmd:URL' },
            { name: 'distributionAccessConstraints', label: 'Access Constraints', type: 'textarea', path: '//gmd:identificationInfo/gmd:MD_DataIdentification/gmd:resourceConstraints/gmd:MD_LegalConstraints/gmd:accessConstraints/gmd:MD_RestrictionCode' },
            { name: 'distributionUseConstraints', label: 'Use Constraints', type: 'textarea', path: '//gmd:identificationInfo/gmd:MD_DataIdentification/gmd:resourceConstraints/gmd:MD_LegalConstraints/gmd:useConstraints/gmd:MD_RestrictionCode' }
        ]
    };

    // Fill the form with default template data
    document.getElementById('name').value = defaultTemplate.name;
    document.getElementById('description').value = defaultTemplate.description;
    document.getElementById('metadata_standard').value = defaultTemplate.metadata_standard;
    document.getElementById('metadata_version').value = defaultTemplate.metadata_version;
    document.getElementById('is_default').checked = defaultTemplate.is_default;

    // Create template XML
    const templateXml = generateTemplateXML(defaultTemplate);
    document.getElementById('template_xml').value = templateXml;

    // Add fields to the form
    const fieldsContainer = document.getElementById('fields-container');
    fieldsContainer.innerHTML = ''; // Clear existing fields
    defaultTemplate.fields.forEach(field => {
        addField(field);
    });
}

// Function to generate template XML
function generateTemplateXML(template) {
    // Create a basic XML structure for the template
    let xml = `<?xml version="1.0" encoding="UTF-8"?>
<gmd:MD_Metadata xmlns:gmd="http://www.isotc211.org/2005/gmd" xmlns:gco="http://www.isotc211.org/2005/gco">
    <gmd:fileIdentifier>
        <gco:CharacterString>{{identifier}}</gco:CharacterString>
    </gmd:fileIdentifier>
    <gmd:language>
        <gco:CharacterString>eng</gco:CharacterString>
    </gmd:language>
    <gmd:characterSet>
        <gmd:MD_CharacterSetCode codeList="http://standards.iso.org/ittf/PubliclyAvailableStandards/ISO_19139_Schemas/resources/codelist/ML_gmxCodelists.xml#MD_CharacterSetCode" codeListValue="utf8">utf8</gmd:MD_CharacterSetCode>
    </gmd:characterSet>
    <gmd:hierarchyLevel>
        <gmd:MD_ScopeCode codeList="http://standards.iso.org/ittf/PubliclyAvailableStandards/ISO_19139_Schemas/resources/codelist/ML_gmxCodelists.xml#MD_ScopeCode" codeListValue="dataset">dataset</gmd:MD_ScopeCode>
    </gmd:hierarchyLevel>
    <gmd:contact>
        <gmd:CI_ResponsibleParty>
            <gmd:individualName>
                <gco:CharacterString>{{pointOfContact}}</gco:CharacterString>
            </gmd:individualName>
            <gmd:organisationName>
                <gco:CharacterString>{{publisher}}</gco:CharacterString>
            </gmd:organisationName>
            <gmd:role>
                <gmd:CI_RoleCode codeList="http://standards.iso.org/ittf/PubliclyAvailableStandards/ISO_19139_Schemas/resources/codelist/ML_gmxCodelists.xml#CI_RoleCode" codeListValue="pointOfContact">pointOfContact</gmd:CI_RoleCode>
            </gmd:role>
        </gmd:CI_ResponsibleParty>
    </gmd:contact>
    <gmd:dateStamp>
        <gco:DateTime>{{dateStamp}}</gco:DateTime>
    </gmd:dateStamp>
    <gmd:metadataStandardName>
        <gco:CharacterString>ISO 19115</gco:CharacterString>
    </gmd:metadataStandardName>
    <gmd:metadataStandardVersion>
        <gco:CharacterString>2018</gco:CharacterString>
    </gmd:metadataStandardVersion>
    <gmd:identificationInfo>
        <gmd:MD_DataIdentification>
            <gmd:citation>
                <gmd:CI_Citation>
                    <gmd:title>
                        <gco:CharacterString>{{title}}</gco:CharacterString>
                    </gmd:title>
                    <gmd:date>
                        <gmd:CI_Date>
                            <gmd:date>
                                <gco:Date>{{date}}</gco:Date>
                            </gmd:date>
                            <gmd:dateType>
                                <gmd:CI_DateTypeCode codeList="http://standards.iso.org/ittf/PubliclyAvailableStandards/ISO_19139_Schemas/resources/codelist/ML_gmxCodelists.xml#CI_DateTypeCode" codeListValue="publication">publication</gmd:CI_DateTypeCode>
                            </gmd:dateType>
                        </gmd:CI_Date>
                    </gmd:date>
                </gmd:CI_Citation>
            </gmd:citation>
            <gmd:abstract>
                <gco:CharacterString>{{abstract}}</gco:CharacterString>
            </gmd:abstract>
            <gmd:purpose>
                <gco:CharacterString>{{purpose}}</gco:CharacterString>
            </gmd:purpose>
            <gmd:extent>
                <gmd:EX_Extent>
                    <gmd:geographicElement>
                        <gmd:EX_GeographicBoundingBox>
                            <gmd:westBoundLongitude>
                                <gco:Decimal>{{westBound}}</gco:Decimal>
                            </gmd:westBoundLongitude>
                            <gmd:eastBoundLongitude>
                                <gco:Decimal>{{eastBound}}</gco:Decimal>
                            </gmd:eastBoundLongitude>
                            <gmd:southBoundLatitude>
                                <gco:Decimal>{{southBound}}</gco:Decimal>
                            </gmd:southBoundLatitude>
                            <gmd:northBoundLatitude>
                                <gco:Decimal>{{northBound}}</gco:Decimal>
                            </gmd:northBoundLatitude>
                        </gmd:EX_GeographicBoundingBox>
                    </gmd:geographicElement>
                    <gmd:temporalElement>
                        <gmd:EX_TemporalExtent>
                            <gmd:extent>
                                <gml:TimePeriod xmlns:gml="http://www.opengis.net/gml">
                                    <gml:beginPosition>{{temporalStart}}</gml:beginPosition>
                                    <gml:endPosition>{{temporalEnd}}</gml:endPosition>
                                </gml:TimePeriod>
                            </gmd:extent>
                        </gmd:EX_TemporalExtent>
                    </gmd:temporalElement>
                </gmd:EX_Extent>
            </gmd:extent>
        </gmd:MD_DataIdentification>
    </gmd:identificationInfo>
</gmd:MD_Metadata>`;

    return xml;
}
</script>
{% endblock %}
{% endblock %} 