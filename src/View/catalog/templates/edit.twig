{% extends "layout.twig" %}

{% block title %}Edit Metadata Template - GIS Catalog{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <a href="/catalog/templates" class="text-blue-600 hover:text-blue-900">&larr; Back to Templates</a>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Edit Metadata Template</h3>
            <div class="mt-2 max-w-xl text-sm text-gray-500">
                <p>Edit the metadata template details and content.</p>
            </div>
            <form id="editTemplateForm" action="/catalog/templates/{{ template.id }}/edit" method="POST" class="mt-5 space-y-6" onsubmit="return handleSubmit(this);">
                <input type="hidden" name="_method" value="POST">
                <input type="hidden" name="form_submitted" value="1">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Template Name</label>
                    <div class="mt-1">
                        <input type="text" name="name" id="name" value="{{ template.name }}" required
                            class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">
                    </div>
                </div>

                <div>
                    <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                    <div class="mt-1">
                        <textarea name="description" id="description" rows="3"
                            class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">{{ template.description }}</textarea>
                    </div>
                </div>

                <div>
                    <label for="metadata_standard" class="block text-sm font-medium text-gray-700">Metadata Standard</label>
                    <div class="mt-1">
                        <select name="metadata_standard" id="metadata_standard" required
                            class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">
                            <option value="ISO 19115" {% if template.metadata_standard == 'ISO 19115' %}selected{% endif %}>ISO 19115</option>
                            <option value="ISO 19139" {% if template.metadata_standard == 'ISO 19139' %}selected{% endif %}>ISO 19139</option>
                            <option value="INSPIRE" {% if template.metadata_standard == 'INSPIRE' %}selected{% endif %}>INSPIRE</option>
                            <option value="FGDC" {% if template.metadata_standard == 'FGDC' %}selected{% endif %}>FGDC</option>
                            <option value="OGC CSW" {% if template.metadata_standard == 'OGC CSW' %}selected{% endif %}>OGC CSW</option>
                            <option value="Dublin Core" {% if template.metadata_standard == 'Dublin Core' %}selected{% endif %}>Dublin Core</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label for="metadata_version" class="block text-sm font-medium text-gray-700">Version</label>
                    <div class="mt-1">
                        <input type="text" name="metadata_version" id="metadata_version" value="{{ template.metadata_version }}" required
                            class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md">
                    </div>
                </div>

                <div>
                    <label for="template_xml" class="block text-sm font-medium text-gray-700">Template XML</label>
                    <div class="mt-1">
                        <textarea name="template_xml" id="template_xml" rows="10" required
                            class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md font-mono">{{ template.template_xml }}</textarea>
                    </div>
                    <p class="mt-2 text-sm text-gray-500">
                        Use {{variableName}} syntax to define template variables.
                    </p>
                </div>

                <div class="flex items-center">
                    <input type="checkbox" name="is_default" id="is_default" value="1" {% if template.is_default %}checked{% endif %}
                        class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                    <label for="is_default" class="ml-2 block text-sm text-gray-900">
                        Set as default template
                    </label>
                </div>

                <div class="pt-5">
                    <div class="flex justify-end">
                        <a href="/catalog/templates" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Cancel
                        </a>
                        <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Save Changes
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{% block scripts %}
<script>
function handleSubmit(form) {
    // Add any form validation here
    return true;
}
</script>
{% endblock %}
{% endblock %} 