{% extends "layout.twig" %}

{% block title %}Metadata Templates - GIS Catalog{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold">Metadata Templates</h1>
            <p class="mt-2 text-sm text-gray-600">Manage metadata templates for dataset creation</p>
        </div>
        <a href="/catalog/templates/new" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            Create New Template
        </a>
    </div>

    {% if templates %}
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
            {% for template in templates %}
            <li class="px-6 py-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <p class="text-sm font-medium text-blue-600 truncate">
                            {{ template.name }}
                        </p>
                        {% if template.is_default %}
                        <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                            Default
                        </span>
                        {% endif %}
                    </div>
                    <div class="ml-2 flex-shrink-0 flex">
                        <a href="/catalog/templates/{{ template.id }}" class="text-blue-600 hover:text-blue-900 mr-4">View</a>
                        <a href="/catalog/templates/{{ template.id }}/edit" class="text-blue-600 hover:text-blue-900 mr-4">Edit</a>
                        <form action="/catalog/templates/{{ template.id }}/delete" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this template?');">
                            <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                        </form>
                    </div>
                </div>
                <div class="mt-2 sm:flex sm:justify-between">
                    <div class="sm:flex">
                        <p class="flex items-center text-sm text-gray-500">
                            {{ template.description }}
                        </p>
                    </div>
                    <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
                        <p>
                            {{ template.metadata_standard }} {{ template.metadata_version }}
                        </p>
                    </div>
                </div>
                {% if not template.is_default %}
                <div class="mt-2">
                    <form action="/catalog/templates/{{ template.id }}/set-default" method="POST" class="inline">
                        <button type="submit" class="text-sm text-gray-500 hover:text-gray-700">
                            Set as Default
                        </button>
                    </form>
                </div>
                {% endif %}
            </li>
            {% endfor %}
        </ul>
    </div>
    {% else %}
    <div class="text-center py-12">
        <h3 class="mt-2 text-sm font-medium text-gray-900">No templates</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new template.</p>
        <div class="mt-6">
            <a href="/catalog/templates/new" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Create New Template
            </a>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %} 