            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 0.25rem;
            box-sizing: border-box;
            font-size: 1rem;
            line-height: 1.5;
        }
        /* Add hover effect */
        .form-input:hover,
        .form-textarea:hover,
        .form-select:hover {
            border-color: #4b5563;
        }
        /* Add focus effect */
        .form-input:focus,
        .form-textarea:focus,
        .form-select:focus {
            outline: none;
            border-color: #2563eb;
            box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.1);
