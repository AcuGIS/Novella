                        const extentSource = new ol.source.Vector();
                        const extentLayer = new ol.layer.Vector({
                            source: extentSource,
                            style: new ol.style.Style({
                                stroke: new ol.style.Stroke({
                                    color: 'rgba(0, 0, 255, 1.0)',
                                    width: 2
                                }),
