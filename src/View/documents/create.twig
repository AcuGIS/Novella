{% extends "layout.twig" %}

{% block content %}
<div class="max-w-2xl mx-auto mt-8">
    <div class="bg-white shadow rounded-lg p-8">
        <h2 class="text-2xl font-bold mb-6">Upload Document</h2>
        {% if flash %}
        <div class="mb-4 p-3 rounded {{ flash.type == 'success' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
            {{ flash.message }}
        </div>
        {% endif %}
        <form action="{{ url_for('documents.store') }}" method="POST" enctype="multipart/form-data" class="space-y-6">
            <div>
                <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
                <input type="text" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" id="title" name="title" required>
            </div>
            <div>
                <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                <textarea class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" id="description" name="description" rows="3"></textarea>
            </div>
            <div>
                <label for="document" class="block text-sm font-medium text-gray-700">Document</label>
                <input type="file" class="mt-1 block w-full text-gray-700" id="document" name="document" required>
                <p class="text-xs text-gray-500 mt-1">Allowed file types: PDF, DOC, DOCX, XLS, XLSX, TXT, CSV</p>
            </div>
            <div class="flex items-center">
                <input type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" id="is_public" name="is_public">
                <label class="ml-2 block text-sm text-gray-700" for="is_public">Make this document public</label>
            </div>
            <div class="flex justify-between">
                <a href="{{ url_for('documents.index') }}" class="inline-block px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300">Cancel</a>
                <button type="submit" class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Upload Document</button>
            </div>
        </form>
    </div>
</div>
{% endblock %} 