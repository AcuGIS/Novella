<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Novella GIS Catalog{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
   {% block stylesheets %}{% endblock %}
</head>
<body class="bg-gray-100 min-h-screen">
    {% set currentUser = user() %}
    
    <!-- Debug Info -->
    {% if app.debug %}
    <div class="bg-gray-800 text-white p-4">
        <pre>User: {{ dump(currentUser) }}</pre>
        <pre>Session: {{ dump(_SESSION) }}</pre>
    </div>
    {% endif %}

    <!-- Navigation -->
    <nav class="bg-white">
        <div class="px-8">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <div class="flex-shrink-0 flex items-center">
                        <a href="/" class="text-xl font-bold text-gray-800">Novella</a>
                    </div>
                    <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                        <!-- Public link always visible -->
                        <a href="/public" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Home
                        </a>
                        <a href="/about" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            About
                        </a>
                        <a href="/viewer" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Viewer
                        </a>


                        {% if currentUser and 'ROLE_ADMIN' in currentUser['roles'] %}
                        <a href="/catalog" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Catalog
                        </a>
                        <a href="/metadata" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Metadata
                        </a>
                        <a href="/oai/harvest" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            OAI-PMH
                        </a>
                        <a href="/admin/users" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Users
                        </a>
                        <a href="/topics" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Topics
                        </a>
			<a href="/viewer" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Viewer
                        </a>

                        {% endif %}
                    </div>
                </div>
                <div class="hidden sm:ml-6 sm:flex sm:items-center">
                    {% if currentUser %}
                        <div class="ml-3 relative">
                            <div class="flex items-center space-x-4">
                                <span class="text-gray-700">{{ currentUser.email }}</span>
                                <a href="/auth/logout" class="text-gray-500 hover:text-gray-700">Logout</a>
                            </div>
                        </div>
                    {% else %}
                        <a href="/auth/login" class="text-gray-500 hover:text-gray-700">Login</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    {% if flash %}
    <div class="max-w-7xl mx-auto px-4 mt-4">
        <div class="rounded-md p-4 {% if flash.type == 'success' %}bg-green-50 text-green-700{% else %}bg-red-50 text-red-700{% endif %}">
            {{ flash.message }}
        </div>
    </div>
    {% endif %}

    <!-- Main Content -->
    <main>
        {% block content %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-white mt-8">
        <div class="max-w-7xl mx-auto py-6 px-4">
            <p class="text-center text-gray-500">&copy; {{ "now"|date("Y") }} GeoLibre</p>
        </div>
    </footer>

    <!-- Scripts -->
    {% block scripts %}{% endblock %}
</body>
</html> 